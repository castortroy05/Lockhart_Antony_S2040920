    <RelativeLayout
        android:id="@+id/informationSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:shadowColor="@color/black"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="2.5"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <LinearLayout
            android:id="@+id/descriptionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delayInfo"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"

            android:weightSum="1">

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.35"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:text="Description: "
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.65"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/delayInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:layout_alignParentLeft="true"
            android:layout_gravity="start"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/startDateInfo"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/delayInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.25"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:text="Delay Information: "
                android:textAlignment="inherit"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtDelayInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/startDateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"

            android:layout_centerInParent="true"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/startDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.25"
                android:autoLink="all"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:text="Start Date: "
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.5"
                android:autoLink="all"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/endDateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/startDateInfo"
            android:layout_alignStart="@id/startDateInfo"
            android:layout_centerInParent="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/endDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.25"
                android:autoLink="all"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:text="End Date: "
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="0.75"
                android:autoLink="all"
                android:padding="5dp"
                android:shadowColor="@color/black"
                android:shadowDx="1.2"
                android:shadowDy="1.2"
                android:shadowRadius="1.5"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mapButtonSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/informationSection"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0"
            android:autoLink="all"
            android:background="@color/black"
            android:padding="5dp"
            android:shadowColor="@color/black"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="gone"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="0"
            android:autoLink="all"
            android:padding="5dp"
            android:shadowColor="@color/black"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:visibility="gone" />

        <Button
            android:id="@+id/mapButton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:backgroundTint="#4CAF50"
            android:minHeight="48dp"
            android:onClick="loadMap"
            android:padding="15dp"
            android:shadowColor="@color/DarkGray"
            android:shadowDx="1.2"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"
            android:text="Load Map"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:ignore="HardcodedText" />


    </LinearLayout>
</RelativeLayout>



